@model PlaceSite.Models.Menu
@{
    ViewBag.Title = "MenuAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Add To Menu</h2>
<br />

<form class="form-group" method="post">
    @Html.LabelFor(x => x.FoodName);
    @Html.TextBoxFor(x => x.FoodName, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Explanation);
    @Html.TextBoxFor(x => x.Explanation, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Price);
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
  
    <button class="btn btn-primary">Save</button>
</form>
